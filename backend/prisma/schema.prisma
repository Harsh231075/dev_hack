generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  role     Role
}

model Event {
  id       String  @id @default(uuid())
  name     String
  description String
  location String
  date     DateTime
  organizerId String
  feedback Feedback[]
}

model Feedback {
  id            String  @id @default(uuid())
  eventId       String
  name          String
  email         String
  score         Int
  comment       String
  sentimentScore Float
  createdAt     DateTime @default(now())
  event         Event   @relation(fields: [eventId], references: [id])
}

enum Role {
  ORGANIZER
  ATTENDEE
}
